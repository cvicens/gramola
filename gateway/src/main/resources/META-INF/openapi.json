                "summary": "Get file by ID"
            },
            "parameters": [
                {
                    "name": "fileId",
                    "schema": {
                        "type": "string"
                    },
                    "in": "path",
                    "required": true
                }
            ]
        },
        "/api/files/upload": {
            "post": {
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/FileUpload",
                                "properties": {
                                    "naming_strategy": {
                                        "type": "string"
                                    },
                                    "file": {
                                        "format": "binary",
                                        "type": "string"
                                    }
                                }
                            },
                            "encoding": {
                                "file": {
                                    "contentType": "image/png, image/jpeg"
                                }
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/FileResponse"
                                }
                            }
                        },
                        "description": "Successful upload"
                    }
                },
                "operationId": "filesPost",
                "summary": "Receives metada and a file as form-data"
            }
        },
