        "/api/files/{fileId}": {
            "get": {
                "responses": {
                    "200": {
                        "content": {
                            "image/jpeg": {
                                "schema": {
                                    "format": "binary",
                                    "type": "string"
                                }
                            },
                            "image/png": {
                                "schema": {
                                    "format": "binary",
                                    "type": "string"
                                }
                            }
                        },
                        "description": "Returns a file"
                    }
